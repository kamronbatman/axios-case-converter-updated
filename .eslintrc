{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "max-len": ["error", { "code": 125 }],
    "no-nested-ternary": "off",
    "operator-linebreak": ["error", "after"],
    "no-plusplus": "off"
  }
}
